using namespace std;
class Transport {
protected:int weight;
		  int speed;
		  string name;
public:Transport() {
	cout << "Введи скорость и массу транспорта:" << endl;
	cin >> weight >> speed;
	cout << "Введите название транспорта" << endl;
	cin >> name;
}
	   virtual  void showAdvantages() = 0;
};
class Bycicle :public Transport {
public:
	Bycicle() :Transport() {  }
	void showAdvantages() {
		cout << "Велик:" << name << ' ' << speed << "km/h " << weight << "кг" << endl;
	}
};
class Bus :public Transport {
public:
	Bus() :Transport() {}
	void showAdvantages() {
		cout << "Автобус:" << name << ' ' << speed << "km/h " << weight << "кг" << endl;
	}
};
class Car :public Transport {
public:
	Car() :Transport() { }
	void showAdvantages() {
		cout << "Машина:" << name << ' ' << speed << "km/h " << weight << "кг" << endl;
	}
};
